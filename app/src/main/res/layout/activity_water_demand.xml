        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/val_guide_14"
        app:layout_constraintEnd_toEndOf="@id/val_guide_16"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/val_guide_17"
        app:layout_constraintTop_toTopOf="@id/val_guide_13"

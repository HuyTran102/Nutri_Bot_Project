            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/val_guide_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/val_guide_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/cus_val_dis"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/val_guide_10"
        app:layout_constraintEnd_toEndOf="@id/val_guide_2"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@id/val_guide_1"
        app:layout_constraintTop_toTopOf="@id/val_guide_9"
        app:layout_constraintVertical_bias="0.682">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 giờ chiều:"
            android:textColor="#FFFFFF"
            android:textSize="22sp"

        app:layout_constraintGuide_percent="0.93"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sum_guide_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sum_guide_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@drawable/custom_button"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/sum_guide_6"
        app:layout_constraintEnd_toEndOf="@id/sum_guide_2"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@id/sum_guide_1"
        app:layout_constraintTop_toTopOf="@id/sum_guide_5"
        app:layout_constraintVertical_bias="0.366">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng lượng nước:"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#FA645787"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sum_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text=""
            android:layout_gravity="center"
            android:textColor="#FA645787"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/arrow_guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.47"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/arrow_guide_2"
        android:layout_width="wrap_content"
